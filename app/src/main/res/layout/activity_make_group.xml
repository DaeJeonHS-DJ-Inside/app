<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityMakeGroup">

    <EditText
        android:id="@+id/editTextGroupName"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="GroupName"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <EditText
        android:id="@+id/editTextGroupDescription"
        android:layout_width="267dp"
        android:layout_height="179dp"
        android:ems="10"
        android:hint="GroupDescription"
        android:inputType="textLongMessage|textImeMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGroupName"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/buttonMakeGroup"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:text="MakeGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGroupDescription"
        app:layout_constraintVertical_bias="0.766" />

    <Button
        android:id="@+id/btSelectGroupBanner"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:text="Select Banner Image"
        app:layout_constraintBottom_toTopOf="@+id/buttonMakeGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivPreviewGroupBannerImage"
        android:layout_width="349dp"
        android:layout_height="111dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btSelectGroupBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGroupDescription"
        app:layout_constraintVertical_bias="0.525"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE GROUP"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextGroupName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>